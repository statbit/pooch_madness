extends layout

block content

    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
            a.navbar-brand Pooch Madness!
        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav.navbar-right
                li.signup-btn
                    if name
                        Hi #{name}
                            a.btn-lg.btn-primary(href='/signout') Sign out
                    else
                        a.btn-lg.btn-primary(href='/signup') Sign up


    .match.container.signups
        .row
          .col-lg-6
            h2 Sign up
            form(method="post" action="/signup" role="form").form-horizontal
              .form-group.col-lg-12
                label(for='name') Your Name
                input(name='name').form-control.name
                if (signup && signup.error && signup.error.name)
                  .error=signup.error.name
              .form-group.col-lg-12
                label(for='password') Your (not so) Secret Passord
                input(name='password' type='password').form-control.password
                if (signup && signup.error && signup.error.password)
                  .error=signup.error.password
              button(type='submit').btn.btn-primary Sign Up

          .col-lg-6
            h2 Sign in
            form(method="post" action="/signin").form-horizontal
              .form-group.col-lg-12
                .form-group.col-lg-12
                  label(for='name') Your Name
                  input(name='name').form-control.name
                .form-group.col-lg-12
                  label(for='password') Your (not so) Secret Password
                  input(name='password' type='password').form-control.password
                .form-group.col-lg-12
                  button(type='submit').btn.btn-primary Sign In
